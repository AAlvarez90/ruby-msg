#! /usr/bin/ruby

$: << File.dirname(__FILE__) + '/../lib/'
require 'msg'

def msg2eml
	quiet = if ARGV[0] == '-q'
		ARGV.shift
		true
	end
	# just shut up and convert a message to eml
	Msg::Log.level = Logger::WARN
	Msg::Log.level = Logger::FATAL if quiet
	msg = Msg.open ARGV[0]
	puts msg.to_mime.to_s
end

msg2eml
